<div class="table-responsive">
  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <td style="width: 1px;" class="text-center"><input type="checkbox" onclick="$('input[name*=\'selected\']').trigger('click');"/></td>
        <td class="text-left">{{ column_email }}</td>
        <td class="text-left">{{ column_request }}</td>
        <td class="text-left">{{ column_status }}</td>
        <td class="text-left">{{ column_date_added }}</td>
        <td class="text-right">{{ column_action }}</td>
      </tr>
    </thead>
    <tbody>
      {% if gdprs %}
        {% for gdpr in gdprs %}
          <tr>
            <td class="text-center">{% if gdpr.gdpr_id in selected %}
                <input type="checkbox" name="selected[]" value="{{ gdpr.gdpr_id }}" checked="checked"/>
              {% else %}
                <input type="checkbox" name="selected[]" value="{{ gdpr.gdpr_id }}"/>
              {% endif %}</td>
            <td class="text-left">
              {% if gdpr.edit %}
                <a href="{{ gdpr.edit }}">{{ gdpr.email }}</a>
              {% else %}
                {{ gdpr.email }}
              {% endif %}
            </td>
            <td class="text-left">{{ gdpr.action }}</td>
            <td class="text-left">
              {% if gdpr.status == '-1' %}
                <span class="badge badge-danger">{{ text_denied }}</span>
              {% elseif gdpr.status == '0' %}
                <span class="badge badge-secondary">{{ text_unverified }}</span>
              {% elseif gdpr.status == '1' %}
                <span class="badge badge-warning">{{ text_pending }}</span>
              {% elseif gdpr.status == '2' %}
                <span class="badge badge-info">{{ text_processing }}</span>
              {% elseif gdpr.status == '3' %}
                <span class="badge badge-success">{{ text_complete }}</span>
              {% endif %}</td>
            <td class="text-left">{{ gdpr.date_added }}</td>
            <td class="text-right"><a href="{{ gdpr.approve }}" data-toggle="tooltip" title="{{ text_approve }}" class="btn btn-success"><i class="fas fa-check"></i></a> <a href="{{ gdpr.deny }}" data-toggle="tooltip" title="{{ text_deny }}" class="btn btn-warning"><i class="fas fa-times"></i></a> <a href="{{ gdpr.delete }}" data-toggle="tooltip" title="{{ text_delete }}" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a></td>
          </tr>
        {% endfor %}
      {% else %}
        <tr>
          <td class="text-center" colspan="6">{{ text_no_results }}</td>
        </tr>
      {% endif %}
    </tbody>
  </table>
</div>
<div class="row">
  <div class="col-sm-6 text-left">{{ pagination }}</div>
  <div class="col-sm-6 text-right">{{ results }}</div>
</div>
